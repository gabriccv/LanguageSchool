<Window x:Class="SR39_2021_pop2022_2.Views.ShowAddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SR39_2021_pop2022_2.Views"
        mc:Ignorable="d"
        Title="ShowAddressWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" 
              VerticalAlignment="Top" 
              Height="30">
            <MenuItem Name="miAddAddress" Height="30" Header="Add Address" Click="miAddAddress_Click"></MenuItem>
            <MenuItem Name="miUpdateAddress" Height="30" Header="Update Address" Click="miUpdateAddress_Click"></MenuItem>
            <MenuItem Name="miDeleteAddress" Height="30" Header="Delete Address" Click="miDeleteAddress_Click"></MenuItem>
        </Menu>

        <DataGrid CanUserAddRows="False" 
                  IsReadOnly="True" 
                  Grid.Row="1" 
                  Name="dgAddress" 
                  Width="800" 
                  Margin="0,0,-8,0"
                  AutoGeneratingColumn="dgAddress_AutoGeneratingColumn"/>

    </Grid>
</Window>
